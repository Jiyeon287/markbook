<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.markbook.mapper.adminMapper">
 
 
 	<!-- 도서 등록 -->
 	<insert id="bookRegister">
 		insert into book (b_num,b_name,b_category,b_image,b_content,b_count,
 		b_writer,b_publisher,b_regdate,b_able,b_amount) 
 		values (#{b_num},#{b_name},#{b_category},#{b_image},#{b_content},#{b_count},
 		#{b_writer},#{b_publisher},#{b_regdate},#{b_able},#{b_amount})
 	</insert>
 	
 	
 	<!-- 도서 목록 -->
 	<select id="bookList" resultType="mk_bookVO">
 		select * from book
 	</select>
 
 	<!-- 도서 목록 페이징 처리 list -->
 	<select id="listCri" resultType="mk_bookVO">
 		select * from book 
 		order by b_num desc 
 		limit #{pageStart},#{pageSize} <!-- 크기를 받아가서 저장 -->
 	</select>
 	
 	<!-- 도서 목록 전체 갯수 조회 -->
 	<select id="countBook" resultType="int">
 		select count(*) 
 		from book
 	</select>
 	
 	<!-- 도서 목록 개별 정보 조회  -->
 	<select id="bInfo" resultType="mk_bookVO">
 		select * from book 
 		where b_num = #{b_num}
 	</select>
 
 	<!-- 도서 수정 -->
 	<update id="bookUpdate">
 		update book 
 		set 
 		b_num = #{b_num}, 
 		b_name = #{b_name}, 
 		b_category = #{b_category}, 
 		b_image = #{b_image}, 
 		b_content = #{b_content}, 
 		b_count = #{b_count}, 
 		b_writer = #{b_writer}, 
 		b_publisher = #{b_publisher}, 
 		b_regdate = #{b_regdate}, 
 		b_able = #{b_able}, 
 		b_amount = #{b_amount} 
 		where b_num = #{b_num}
 	</update>
 	
 	
 	<!-- 도서 삭제 -->
 	<delete id="bookDelete">
 		delete from book 
 		where b_num = #{b_num}
 	</delete>
 	
 	
 	<!-- 도서 상세페이지 -->
 	<select id="">
 		select * 
 		from book 
 		where b_num = #{b_num}
 	</select>
 	
 
 
 
 
  </mapper>
  
